<UserControl x:Class="VolumeBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMEdit_WPF"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="128" VerticalAlignment="Top" HorizontalAlignment="left">
    <StackPanel>
        <Rectangle Height="4" Fill="lime" Cursor="SizeNS" MouseDown="Rectangle_MouseDown" MouseMove="Rectangle_MouseMove" MouseUp="Rectangle_MouseUp" Name="h"></Rectangle>
        <Rectangle Width="4" HorizontalAlignment="Left" Fill="Lime" Height="96" Name="v"></Rectangle>
    </StackPanel>
</UserControl>
